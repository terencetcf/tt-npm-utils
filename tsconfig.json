{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./lib",
    "baseUrl": "./",
    "paths": {
      "@utils": ["src/utils"]
    },
    "declaration": true,
    "resolveJsonModule": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts", "test/**/*.ts", "package.json"],
  "ts-node": {
    "files": true
  }
}
